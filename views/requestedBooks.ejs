<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>

    <script
      type="module"
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"
    ></script>

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Mallanna&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Mallanna&family=Libre+Caslon+Text:ital,wght@0,400;0,700;1,400&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="css/admin.css" />
    <script defer src="/js/admin.js"></script>
  </head>

  <style>
    .heading-books {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        }
    .title {
        font-size: 2.6rem;
        margin-bottom: 1rem;
    }
    .subtitle {
        margin: 0;
        color: var(--muted);
        font-size: 1.3rem;
    }

    .card {
        background: var(--card-bg);
        border: 1px solid #eee;
        border-radius: 1.5rem;
        padding: 2rem 4rem;
        /* box-shadow: 0 6px 18px rgba(15, 23, 42, 0.06); */
        margin-top: 2rem;
    }

    .feedback_box{
        display: grid;
        grid-template-columns: 24rem 1fr;
        padding: 2rem 4.2rem;
        /* border-top: 1px solid #eee; */
        border-bottom: 1px solid #eee;
    }
    .flex-col{
        display: flex;
        flex-direction: column;
        gap: .6rem;
    }
    .customer h3{
        font-size: 1.6rem;
    }
    .customer span{
        font-size: 1.3rem;
    }

    .feedback span{
        font-size: 1.6rem;
    }
    .feedback p{
        font-size: 1.5rem;
    }
  </style>

  <body>
    <section class="main_section">
        <%- include('partials/admin_nav') %>

      <div class="main_container">
        <div class="header_box">
          <h1 class="heading">Welcome back ! <%= aname %></h1>
          <div class="greeting_box">
            <div id="greetGif"></div>
            <span id="greet" class="sub_txt">Good Afternoon</span>
          </div>
        </div>
        <!-- Load Tenor embed script (only once per page) -->
        <script
          type="text/javascript"
          async
          src="https://tenor.com/embed.js"
        ></script>

        <div class="container">
            <div class="header-flex">
                <div class="heading-book">
                    <h1 class="title">Requested Books <span
                style="
                  font-size: 1.4rem;
                  color: #fff;
                  background-color: #333;
                  border-radius: 2rem;
                  padding: 0.1rem 0.84rem;
                "
                ><%= totalFeedbacks %></span
              ></h1>
                    <p class="subtitle">
                        All requested books are shown here.
                    </p>
                </div>
        </div>

        <div class="card">
            <% data.forEach((entry)=>{ %> 
            <div class="feedback_box">
                <div class="customer flex-col">
                    <h3><%= entry.user_name %></h3>
                    <span><%= entry.user_email %></span>
                    <span><%= new Date(entry.created_at).toDateString() %></span>
                </div>
                <div class="feedback flex-col">
                    <span>Book name: <strong><%= entry.book_name %></strong></span>
                    <p>by <%= entry.author %></p>
                </div>
            </div>
            <%});%>
        </div>
      </div>
    </section>
  </body>
</html>
